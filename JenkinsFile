pipeline {
    agent none
    stages {
        stage('Checkout code') {
            agent any
            steps {
                git url: 'https://github.com/BoSswosile/jenkins-test.git', branch: 'source'
            }
        }
        
        stage('Build Backend') {
            agent {
                label 'docker-agent-python'
            }
            steps {
                sh 'pip install -r back/requirements.txt'
            }
        }
        stage('Test') {
            agent {
                label 'docker-agent-python-test'
            }
            stage {
                unstash 'source-code'
                sh 'cd backend && pytest [] echo "No tests found"'
            }
        }
        stage('SonarQube Analysis') {
            agent any
            steps {
                unstash 'source-code'
                script {
                    withSonarQubeEnv('SonarQube') {
                        sh "cd back && sonar-scanner"
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
